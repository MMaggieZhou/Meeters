<?xml version="1.0" encoding="utf-8"?>

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/white"
     android:orientation="horizontal" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pplAttend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_row="2"
            android:text="        "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/primary_text_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="@dimen/list_item_general_text_size" />

    </GridLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
            android:id="@+id/eventTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/eventRemoveButton"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="Chris&apos;s Chinese Lunch Meet in 15 Mins!"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/primary_text_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="@dimen/list_item_general_text_size"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/eventTheme"
                android:layout_below="@+id/eventTheme"
                android:layout_toLeftOf="@+id/eventRemoveButton"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/primary_text_light"
                android:textColorHint="@android:color/background_light"
                android:textSize="@dimen/list_item_general_text_size" />

        <TextView
            android:id="@+id/list_item_party_time_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:text="10/15/2014 11:50 am"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/primary_text_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="@dimen/list_item_general_small_text_size" />

        <TextView
            android:id="@+id/list_item_party_distance_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/eventRemoveButton"
            android:layout_marginTop="50dp"
            android:paddingRight="5dp"
            android:text="&lt; 0.1 mil"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/primary_text_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="@dimen/list_item_general_small_text_size" />

        <ImageButton
            android:id="@+id/openMapButton"
            android:layout_width="@dimen/image_btn_general_width_height"
            android:layout_height="@dimen/image_btn_general_width_height"
            android:layout_alignRight="@+id/list_item_party_distance_data"
            android:layout_below="@+id/list_item_party_distance_data"
            android:background="@drawable/ic_action_location" />

        <ImageButton
            android:id="@+id/emailHostButton"
            android:layout_width="@dimen/image_btn_general_width_height"
            android:layout_height="@dimen/image_btn_general_width_height"
            android:layout_below="@+id/list_item_party_time_data"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/openMapButton"
            android:background="@drawable/ic_action_email" />

        <ImageButton
            android:id="@+id/eventJoinButton"
            android:layout_width="@dimen/image_btn_general_width_height"
            android:layout_height="@dimen/image_btn_general_width_height"
            android:layout_below="@+id/list_item_party_time_data"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/emailHostButton"
            android:background="@drawable/ic_action_join" />
-->

        <ImageButton
            android:id="@+id/eventRemoveButton"
            android:layout_width="@dimen/image_btn_general_large_width_height"
            android:layout_height="@dimen/image_btn_general_large_width_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:background="@drawable/ic_action_remove_event"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

</LinearLayout>